#include <stdio.h>
#include <string.h>


int main(){
    int opcaoMenu;

    printf("MENU PRINCIPAL:\n");
    printf("1. Iniciar jogo\n");
    printf("2. Ver regras\n");
    printf("3. Sair\n");
    printf("Escolha uma opção: ");

    scanf("%d", &opcaoMenu);
    
    switch (opcaoMenu)
    {
    case 1:
        break;
    case 2:
        printf("\n Regras do jogo: \n");
        printf("1. Cada Carta representa uma cidade.\n");
        printf("2. Você deve informar os dados de duas cartas.\n");
        printf("3. Depois escolha um atributo para comparar.\n");
        printf("4. Quem tiver o maior valor vence!\n");
        printf("5. Se os valores forem iguais, é empate.\n");
        return 0;
    case 3:
        printf("Saindo do jogo. \n");
        return 0;
    default:
    printf("Opção inválida! Reinicie o jogo.\n");
        return 0;
    }
    //Dados da primeira carta
    char estado1;
    char codigo1[4];
    char nomeCidade1[50];
    unsigned long populacao1;
    float area1;
    float pib1;
    int pontosTuristicos1;

    //Dados da segunda carta
    char estado2;
    char codigo2[4];
    char nomeCidade2[50];
    unsigned long populacao2;
    float area2;
    float pib2;
    int pontosTuristicos2;

    //coletando Dados carta 1
    printf("Carta 1:\n");

    printf("Estado:\n");
    scanf(" %c", &estado1);
    getchar();

    printf("Codigo:\n");
    scanf("%3s", codigo1);

    printf("Nome da cidade:\n");
    scanf(" %[^\n]", nomeCidade1);

    printf("População:\n");
    scanf("%d", &populacao1);

    printf("Área (em km²):\n");
    scanf("%f", &area1);

    printf("PIB (em bilhões de reais):\n");
    scanf("%f", &pib1);

    printf("Número de pontos turísticos:\n");
    scanf("%d", &pontosTuristicos1);

    printf("\n");

    //Coletando dados da carta 2
    printf("Carta 2:\n");

    printf("Estado:\n");
    scanf(" %c", &estado2);
    getchar();

    printf("Codigo:\n");
    scanf("%3s", codigo2);

    printf("Nome da cidade:\n");
    scanf(" %[^\n]", nomeCidade2);

    printf("População:\n");
    scanf("%d", &populacao2);

    printf("Área (em km²):\n");
    scanf("%f", &area2);

    printf("PIB (em bilhões de reais):\n");
    scanf("%f", &pib2);

    printf("Número de pontos turísticos:\n");
    scanf("%d", &pontosTuristicos2);

    //Cálculo de densidade e PIB per capita
    float densidade1 = populacao1 / area1;
    float pibPerCapita1 = (pib1 * 1000000000)/ populacao1;

    float densidade2 = populacao2 / area2;
    float pibPerCapita2 = (pib2 * 1000000000)/ populacao2;

    //Cálculo do Super Poder (com inverso da densidade)
    float superPoder1 = (float)populacao1 + area1 +pib1 + pontosTuristicos1 + pibPerCapita1 + (1.0 / densidade1);
    float superPoder2 = (float)populacao2 + area2 +pib2 + pontosTuristicos2 + pibPerCapita2 + (1.0 / densidade2);

    //Exibindo resultados
    printf("\n--- Dados das Cartas ---\n");

    printf("\nCarta 1:\n");
    printf("Estado: %c\n", estado1);
    printf("Código: %s\n", codigo1);
    printf("Nome da cidade: %s\n", nomeCidade1);
    printf("População: %d\n", populacao1);
    printf("Área: %.2f km²\n", area1);
    printf("PIB: %.2f bilhões de reais\n", pib1);
    printf("Número de pontos turísticos: %d\n", pontosTuristicos1);
    printf("Densidade Populacional: %.2f hab/km²\n", densidade1);
    printf("PIB per Capita: %.2f reais\n", pibPerCapita1);
    printf("Super Poder: %.2f\n", superPoder1);

    printf("\nCarta 2:\n");
    printf("Estado: %c\n", estado2);
    printf("Código: %s\n", codigo2);
    printf("Nome da cidade: %s\n", nomeCidade2);
    printf("População: %d\n", populacao2);
    printf("Área: %.2f km²\n", area2);
    printf("PIB: %.2f bilhões de reais\n", pib2);
    printf("Número de pontos turísticos: %d\n", pontosTuristicos2);
    printf("Densidade Populacional: %.2f hab/km²\n", densidade2);
    printf("PIB per Capita: %.2f reais\n", pibPerCapita2);
    printf("Super Poder: %.2f\n", superPoder2);

    // MENU ATRIBUTO
    
    int Item1, Item2;
    char nomeItem1[30];
    char nomeItem2[30];

    printf("\n=== Escolha o primeiro item: ===\n");
    printf("1. População\n");
    printf("2. Área\n");
    printf("3. PIB\n");
    printf("4. Pontos Turísticos\n");
    printf("5. Densidade Populacional\n");

    scanf("%d", &Item1);

    if (Item1 < 1 || Item1 > 5)
    {
       printf("Item inválido!. \n");
       return 0;
    }

     printf("\n=== Escolha o segundo item: ===\n");

     switch (Item1)
     {
     case 1:
       printf("2. Área\n 3. PIB\n 4. Pontos Turísticos\n 5. Densidade Populacional○\n");
        break;
     case 2:
       printf("1. População\n 3. PIB\n 4. Pontos Turísticos\n 5. Densidade Populacional○\n");
        break;
     case 3:
       printf("1. População\n 2. Área\n 4. Pontos Turísticos\n 5. Densidade Populacional○\n");
        break;
     case 4:
       printf("1. População\n 2. Área\n 3. PIB\n 5. Densidade Populacional○\n");
        break;
     case 5:
       printf("1. População\n 2. Área\n 3. PIB\n 4. Pontos Turísticos\n");
        break;
     }
       scanf("%d", &Item2);

       if (Item2 < 1 || Item2 > 5 || Item2 == Item1)
       {
       printf("Segundo item inválido!\n");
       return 0;
       }

       //Nome dos Itens
       if (Item1 == 1) 
           printf(nomeItem1, "População");
       else if (Item1 == 2)
           printf(nomeItem1, "Área");
       else if (Item1 == 3)
           printf(nomeItem1, "PIB");
       else if (Item1 == 4)
           printf(nomeItem1, "Pontos Turísticos");
       else if (Item1 == 5)
           printf(nomeItem1, "Densidade Populacional");

       if (Item2 == 1) 
           printf(nomeItem2, "População");
       else if (Item2 == 2)
           printf(nomeItem2, "Área");
       else if (Item2 == 3)
           printf(nomeItem2, "PIB");
       else if (Item2 == 4)
           printf(nomeItem2, "Pontos Turísticos");
       else if (Item2 == 5)
           printf(nomeItem2, "Densidade Populacional");

        // Valores das cartas dos itens escolhidos:
        float valorCarta1_1 = (Item1 == 1) ? populacao1 :
                              (Item1 == 2) ? area1 :
                              (Item1 == 3) ? pib1 :
                              (Item1 == 4) ? pontosTuristicos1 :
                              densidade1;
          
        float valorCarta2_1 = (Item1 == 1) ? populacao2 :
                              (Item1 == 2) ? area2 :
                              (Item1 == 3) ? pib2 :
                              (Item1 == 4) ? pontosTuristicos2 :
                              densidade2; 
                              
        float valorCarta1_2 = (Item2 == 1) ? populacao1 :
                              (Item2 == 2) ? area1 :
                              (Item2 == 3) ? pib1 :
                              (Item2 == 4) ? pontosTuristicos1 :
                              densidade1;
          
        float valorCarta2_2 = (Item2 == 1) ? populacao2 :
                              (Item2 == 2) ? area2 :
                              (Item2 == 3) ? pib2 :
                              (Item2 == 4) ? pontosTuristicos2 :
                              densidade2;                        

      // Comparando primeiro item 
      int vencedorItem1 = 0;
      if (Item1 == 5)
      {
        vencedorItem1 = (valorCarta1_1 < valorCarta2_1) ? 1 : (valorCarta2_1 < valorCarta1_1) ? 2 : 0;
      } else {
        vencedorItem1 = (valorCarta1_1 > valorCarta2_1) ? 1 : (valorCarta2_1 > valorCarta1_1) ? 2 : 0;
      }
      
      // Comparando segundo item
      int vencedorItem2 = 0;
      if (Item2 == 5)
      {
        vencedorItem2 = (valorCarta1_2 < valorCarta2_2) ? 1 : (valorCarta2_2 < valorCarta1_2) ? 2 : 0;
      } else {
        vencedorItem2 = (valorCarta1_2 < valorCarta2_2) ? 1 : (valorCarta2_2 < valorCarta1_2) ? 2 : 0;;
      }
      
      float somaCarta1 = valorCarta1_1 + valorCarta1_2;
      float somaCarta2 = valorCarta2_1 + valorCarta2_2;

      printf("\n--- Resultado ---\n");
      printf("Carta 1: %s\n", nomeCidade1);
      printf("Carta 2: %s\n", nomeCidade2);
      printf("Item escolhido: %s e %s\n", nomeItem1, nomeItem2);
      printf("%s: %.2f vs %.2f\n", nomeItem1, valorCarta1_1, valorCarta2_1);
      printf("%s: %.2f vs %.2f\n", nomeItem2, valorCarta1_2, valorCarta2_2);
      printf("Soma dos itens: %.2f vs %.2f\n", somaCarta1, somaCarta2);

      if (somaCarta1 > somaCarta2)
      {
        printf("Resultado final: %s venceu!\n", nomeCidade1);
      } else if (somaCarta2 > somaCarta1) {
        printf("Resultado final: %s venceu!\n", nomeCidade2);
      } else {
        printf("Resultado final: Empate!\n");
      }
      
      // Menu interativo 
    int opcao;
    
    printf("\n*** MENU DE COMPARAÇÃO ***\n");
    printf("Escolha o atributo para comparar:\n");
    printf("1. População\n");
    printf("2. Área\n");
    printf("3. PIB\n");
    printf("4. Pontos turísticos\n");
    printf("5. Densidade populacional\n");
    printf("Escolha o atributo para comparar:\n");

    getchar();
    scanf("%d", &opcao);

    printf("\n--- Comparação de cartas ---\n");

    switch (opcao)
    {
    case 1:
        printf("População:\n");
        printf("%s: %d habitantes\n", nomeCidade1, populacao1);
        printf("%s: %d habitantes\n", nomeCidade2, populacao2);

        if (populacao1 > populacao2)
        {
            printf("Resultado: %s venceu!\n", nomeCidade1);
        } else if (populacao2 > populacao1) {
            printf("Resultado: %s venceu!\n", nomeCidade2);
        } else {
            printf("Resultado: Empate!\n");
        }
        break;

    case 2:
        printf("Área:\n");
        printf("%s: %.2f km²\n", nomeCidade1, area1);
        printf("%s: %.2f km²\n", nomeCidade2, area2);

        if (area1 > area2)
        {
            printf("Resultado: %s venceu!\n", nomeCidade1);
        } else if (area2 > area1) {
            printf("Resultado: %s venceu!\n", nomeCidade2);
        } else {
            printf("Resultado: Empate!\n");
        }
        break;

    case 3:
        printf("PIB:\n");
        printf("%s: %.2f bilhões de reais\n", nomeCidade1, pib1);
        printf("%s: %.2f bilhões de reais\n", nomeCidade2, pib2);

        if (pib1 > pib2)
        {
            printf("Resultado: %s venceu!\n", nomeCidade1);
        } else if (pib2 > pib1) {
            printf("Resultado: %s venceu!\n", nomeCidade2);
        } else {
            printf("Resultado: Empate!\n");
        }
        break;

     case 4:
        printf("Pontos turísticos:\n");
        printf("%s: %d\n", nomeCidade1, pontosTuristicos1);
        printf("%s: %d\n", nomeCidade2, pontosTuristicos2);

        if (pontosTuristicos1 > pontosTuristicos2)
        {
            printf("Resultado: %s venceu!\n", nomeCidade1);
        } else if (pontosTuristicos2 > pontosTuristicos1) {
            printf("Resultado: %s venceu!\n", nomeCidade2);
        } else {
            printf("Resultado: Empate!\n");
        }
        break;
    
    case 5:
        printf("Densidade Populacional:\n");
        printf("%s: %.2f hab/km²\n", nomeCidade1, densidade1);
        printf("%s: %.2f hab/km²\n", nomeCidade2, densidade2);

        if (densidade1 > densidade2)
        {
            printf("Resultado: %s venceu!\n", nomeCidade1);
        } else if (densidade2 > densidade1) {
            printf("Resultado: %s venceu!\n", nomeCidade2);
        } else {
            printf("Resultado: Empate!\n");
        }
        break;
    
    default:
    printf("Opção inválida!\n");
        break;
    }

    return 0;
}
